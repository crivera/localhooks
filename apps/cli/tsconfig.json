{
  "extends": "tsconfig/base.json",
  "include": [ "**/*.ts"],
  "exclude": ["node_modules", "dist", ".turbo"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["ESNext"],
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
